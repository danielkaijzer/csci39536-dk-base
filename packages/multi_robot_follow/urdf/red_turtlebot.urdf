<?xml version="1.0"?>
<robot name="red_turtlebot3" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Include the standard TurtleBot3 URDF -->
  <xacro:include filename="$(find turtlebot3_description)/urdf/turtlebot3_waffle.urdf.xacro"/>
  
  <!-- Override the base color to red -->
  <gazebo reference="base_link">
    <material>Gazebo/Red</material>
  </gazebo>
  
  <gazebo reference="base_scan">
    <material>Gazebo/Red</material>
  </gazebo>
</robot>
